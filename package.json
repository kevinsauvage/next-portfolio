{
  "name": "next-portfolio",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:css": "stylelint **/*.{scss,css}",
    "lint:css:fix": "stylelint --fix **/*.{scss,css}",
    "lint:ts": "tsc --noemit",
    "lint:all": "npm run lint && npm run lint:css && npm run lint:ts",
    "lint:all:fix": "npm run lint:fix && npm run lint:css:fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next out dist",
    "analyze": "cross-env ANALYZE=true next build",
    "preview": "next build && next start",
    "check": "npm run type-check && npm run lint:all",
    "check:fix": "npm run format && npm run lint:all:fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@emailjs/nodejs": "^5.0.2",
    "@types/umami": "^2.10.0",
    "@vercel/analytics": "^1.5.0",
    "clsx": "^2.1.1",
    "devicons-react": "^1.3.0",
    "lucide-react": "^0.454.0",
    "next": "^15.1.4",
    "react": "^19.0.0-rc.1",
    "react-dom": "^19.0.0-rc.1",
    "react-google-recaptcha-v3": "^1.10.1",
    "uuid": "^9.0.0",
    "web-vitals": "^5.1.0",
    "zod": "^3.22.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.9.0",
    "@types/react": "npm:types-react@19.0.0-rc.1",
    "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-css-modules": "^2.12.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-keys": "^2.3.5",
    "eslint-plugin-unicorn": "^56.0.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.1.0",
    "sass": "^1.69.0",
    "stylelint": "^15.4.0",
    "stylelint-checkstyle-formatter": "^0.1.2",
    "stylelint-config-recommended-scss": "^13.1.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.1.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  }
}
