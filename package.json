{
  "name": "kevin-sauvage-portfolio",
  "version": "1.0.0",
  "private": true,
  "license": "PROPRIETARY",
  "description": "Personal portfolio website showcasing frontend development skills and experience",
  "author": "KÃ©vin Sauvage <your-email@example.com>",
  "homepage": "https://www.kevin-sauvage.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinsauvage/next-portfolio.git"
  },
  "keywords": [
    "portfolio",
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "frontend",
    "developer"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:css": "stylelint **/*.{scss,css}",
    "lint:css:fix": "stylelint --fix **/*.{scss,css}",
    "lint:ts": "tsc --noemit",
    "lint:all": "npm run lint && npm run lint:css && npm run lint:ts",
    "lint:all:fix": "npm run lint:fix && npm run lint:css:fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next out dist",
    "analyze": "cross-env ANALYZE=true next build",
    "preview": "next build && next start",
    "check": "npm run type-check && npm run lint:all",
    "check:fix": "npm run format && npm run lint:all:fix",
    "prepare": "husky",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@emailjs/nodejs": "^5.0.2",
    "@hookform/resolvers": "^5.2.2",
    "@types/umami": "^2.10.1",
    "@vercel/analytics": "^1.5.0",
    "clsx": "^2.1.1",
    "devicons-react": "^1.5.0",
    "lucide-react": "^0.548.0",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-google-recaptcha-v3": "^1.11.0",
    "react-hook-form": "^7.65.0",
    "uuid": "^9.0.1",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.9.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-config-next": "16.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-css-modules": "^2.12.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-keys": "^2.3.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "postcss": "^8.4.38",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "stylelint": "^15.11.0",
    "stylelint-checkstyle-formatter": "^0.1.2",
    "stylelint-config-recommended-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^5.3.2",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "**/*.{scss,css}": [
      "stylelint --fix"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
